pipeline {
    agent { label 'master' }

    stages {
        
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'git@github.com:markopfc1/devops14-jenkins-public.git'
            }
        }

        stage('TFInit') {
            steps {
                //terraform initialize
                sh "terraform init"
            }
        }
        stage('TFPlan') {
            steps {
                sh "terraform fmt"
                sh "terraform plan"
            }
        }
        stage('TFApply') {
            steps {
                sh "terraform apply -auto-approve"
            }
        }

    }
}
